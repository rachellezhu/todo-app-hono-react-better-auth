{
  "name": "hono-react-better-auth",
  "scripts": {
    "server": "bun run --hot server/index.ts",
    "client": "cd client && bun run dev",
    "dev": "concurrently \"bun run server\" \"bun run client\"",
    "db:up": "docker compose up -d",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run ./scripts/seed-local-db.script.ts"
  },
  "dependencies": {
    "@types/pg": "^8.15.5",
    "drizzle-orm": "^0.44.4",
    "hono": "^4.9.1",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/bun": "^1.2.20",
    "concurrently": "^9.2.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-seed": "^0.3.1"
  }
}
